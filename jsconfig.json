{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "Config/*": [
        "src/config/*",
        "../lesgo-framework/src/config/*",
        "node_modules/lesgo/src/config/*"
      ],
      "Constants/*": [
        "src/constants/*",
        "../lesgo-framework/src/constants/*",
        "node_modules/lesgo/src/constants/*"
      ],
      "Core/*": [
        "src/core/*",
        "../lesgo-framework/src/core/*",
        "node_modules/lesgo/src/core/*"
      ],
      "Exceptions/*": [
        "src/exceptions/*",
        "../lesgo-framework/src/exceptions/*",
        "node_modules/lesgo/src/exceptions/*",
        "node_modules/@types/lesgo/exceptions/*"
      ],
      "Handlers/*": [
        "src/handlers/*",
        "../lesgo-framework/src/handlers/*",
        "node_modules/lesgo/src/handlers/*"
      ],
      "Middlewares/*": [
        "src/middlewares/*",
        "../lesgo-framework/src/middlewares/*",
        "node_modules/lesgo/src/middlewares/*",
        "node_modules/@types/lesgo/middlewares/*"
      ],
      "Models/*": [
        "src/models/*",
        "../lesgo-framework/src/models/*",
        "node_modules/lesgo/src/models/*"
      ],
      "Services/*": [
        "src/services/*",
        "../lesgo-framework/src/services/*",
        "node_modules/lesgo/src/services/*",
        "node_modules/@types/lesgo/services/*"
      ],
      "Utils/*": [
        "src/utils/*",
        "../lesgo-framework/src/utils/*",
        "node_modules/lesgo/src/utils/*",
        "node_modules/@types/lesgo/utils/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist", "config", "coverage"]
}
